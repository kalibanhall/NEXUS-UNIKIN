# ===========================================
# NEXUS UNIKIN - Variables d'environnement
# ===========================================
# Copier ce fichier vers .env.local et remplir les valeurs

# Base de données PostgreSQL
DATABASE_URL="postgresql://user:password@localhost:5432/nexus_unikin"
DIRECT_URL="postgresql://user:password@localhost:5432/nexus_unikin"

# Supabase Configuration (optionnel — seulement si hébergé sur Supabase)
NEXT_PUBLIC_SUPABASE_URL=""
NEXT_PUBLIC_SUPABASE_ANON_KEY=""
SUPABASE_SERVICE_ROLE_KEY=""

# Authentification JWT (OBLIGATOIRE — générer avec: openssl rand -base64 64)
JWT_SECRET=""

# Application
NEXT_PUBLIC_APP_URL="https://nexus.unikin.ac.cd"
NEXT_PUBLIC_APP_NAME="NEXUS UNIKIN"

# Email (pour les notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASSWORD=""

# Upload (Supabase Storage)
NEXT_PUBLIC_STORAGE_BUCKET="nexus-unikin-files"

# Node environment
NODE_ENV="production"
